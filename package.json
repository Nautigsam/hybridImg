{
  "name": "hybridImg",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "eslint": "eslint \"src/**/*.js\"",
    "start": "concurrently \"yarn dev-server\" \"yarn dev-bundle\"",
    "test": "jest",
    "dev-server": "cross-env NODE_PATH=./src nodemon --exec \"babel-node src/server/server.js\" --ignore .reactful.json --ignore public/",
    "dev-bundle": "webpack -wd",
    "verify-tests": "jest --coverage",
    "build-react": "cross-env NODE_ENV=production webpack --progress -p",
    "build-node": "babel src -d build --config-file ./babel-node.config.js --copy-files",
    "build-all": "yarn install && yarn build-react && yarn build-node",
    "prod-start": "cross-env NODE_ENV=production NODE_PATH=./build pm2 start -i max build/server/server.js --update-env --name hybridImgProd",
    "prod-stop": "pm2 stop hybridImgProd",
    "prod-reload": "pm2 reload --update-env hybridImgProd",
    "prod-logs": "pm2 logs --update-env hybridImgProd",
    "test-connect": "babel-node src/server/connect-db",
    "initialize": "babel-node src/server/initialize-db",
    "start-db": "mongod --dbpath=\"./data\"",
    "init-default-state": "babel-node src/server/dev/create-default-state"
  },
  "jest": {
    "modulePaths": [
      "./src"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/runtime": "^7.9.2",
    "axios": "^0.19.2",
    "babel-loader": "^8.1.0",
    "body-parser": "^1.19.0",
    "bulma": "^0.8.2",
    "bulma-slider": "^2.0.0",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "crypto": "^1.0.1",
    "css-loader": "^3.5.2",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "history": "^4.10.1",
    "mini-css-extract-plugin": "^0.9.0",
    "mongodb": "^3.5.5",
    "morgan": "^1.10.0",
    "node-sass": "^4.13.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pm2": "^4.2.3",
    "react": "^16.13.1",
    "react-bulma-components": "^3.2.0",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "regenerator-runtime": "^0.13.5",
    "sass-loader": "^8.0.2",
    "serialize-javascript": "^3.0.0",
    "style-loader": "^1.1.3",
    "uuid": "^7.0.3",
    "webpack": "^4.42.1",
    "webpack-chunk-hash": "^0.6.0",
    "webpack-cli": "^3.3.11"
  },
  "devDependencies": {
    "@babel/node": "^7.8.7",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.3.0",
    "concurrently": "^5.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "react-redux": "^7.2.0",
    "reactful": "^2.0.6",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3"
  }
}
